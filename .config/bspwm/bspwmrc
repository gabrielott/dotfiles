#!/bin/sh

bspc monitor 'DP-4' -d 一 二 三 四 五 六 七 八 九 十
bspc monitor 'DVI-D-0' -d 一 二 三 四 五 六 七 八 九 十

bspc config border_width 7
bspc config -m DP-4 window_gap 30
bspc config -m DP-4 top_padding 35
bspc config -m DVI-D-0 top_padding 0
bspc config -m DVI-D-0 window_gap 0
bspc config gapless_monocle true
bspc config borderless_monocle true
bspc config focus_follows_pointer true
bspc config pointer_follows_focus false
bspc config pointer_follows_monitor false

. "$HOME"/.cache/wal/colors.sh
bspc config normal_border_color "$color1"
bspc config active_border_color "$color2"
bspc config focused_border_color "$color15"
bspc config presel_feedback_color "$color1"

bspc rule --add 'scratchpad:st:*' monitor=DP-4 state=floating hidden=on sticky=on locked=on rectangle=3000x1800+420+180
bspc rule --add 'Genymotion Player' desktop=DVI-D-0:^2 state=fullscreen locked=on
bspc rule --add 'Anki:anki:main - Anki' desktop=DP-4:^2
bspc rule --add 'Anki:anki:Migaku Dictionary' desktop=DVI-D-0:^1 state=fullscreen locked=on
bspc rule --add 'Hydrus Client:client.pyw:hydrus client media viewer' state=floating rectangle=3840x2160+0+0
bspc rule --add 'Hydrus Client:client.pyw:*' desktop=DP-4:^3 locked=on focus=on
bspc rule --add 'pick-song:st:*' state=floating
bspc rule --add 'MEGAsync:megasync:*' state=floating

pgrep -fx -- 'st -c scratchpad' || st -c scratchpad
