#!/bin/sh

# Receives an icon pack name and prints a random icon from the pack to stdout.
# Meant to be used with notify-send's icon option, so filename is supplied without extension.

ICON_DIR="$HOME/.icons"

[ -n "$1" ] && [ ! -d "$ICON_DIR/$1" ] && printf '$s is not a valid icon dir!\n' "$1" && exit 1

find "$ICON_DIR/$1" -type f | shuf -n1 | sed 's_.*/\(.*/.*\)\..*_\1_'
